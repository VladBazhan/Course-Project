@{
    ViewData["Title"] = "Edit Page";
}
@model ProjectCinema.Models.ModelHelp
<link rel="stylesheet" href="/css/use.css">
<div class="block">
    <form asp-controller="Admin" asp-action="EditArticle" method="post">
        <div class="form-group">
            <input asp-for="Name" class="form-control" placeholder="Назва" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <textarea asp-for="Description" class="form-control" placeholder="Опис"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="submit">
            <input hidden asp-for="Id" value="@Model.Id" />
            <button type="submit" class="btn btn-primary">Зберегти</button>
            <a class="button" asp-controller="Admin" asp-action="ManageArticles">Повернутися</a>
        </div>
    </form>
</div>
